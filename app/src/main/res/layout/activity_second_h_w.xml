        <Button
            android:id="@+id/button_1row_4"
            style="@style/buttons_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:text="@string/button_1row_4" />
    </LinearLayout>

